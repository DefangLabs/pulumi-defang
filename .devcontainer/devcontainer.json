{
    "name": "Defang Pulumi Provider",
    "image": "ubuntu:latest",
    "features": {
        "ghcr.io/devcontainers/features/nix:1": {
            "extraNixConfig": "experimental-features = nix-command flakes"
        }
    },
    "containerEnv": {
        "EDITOR": "vim"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go"
            ]
        }
    },
    "postAttachCommand": "nix develop --command bash"
}