{
  "compilerOptions": {
    "strict": true,
    "outDir": "lib",
    "target": "es2019",
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["mocha"]
  },
  "include": [
    "*.ts"
  ]
}
